{{#each this}}
<li id="{{id}}" class="card__item">
    <a class="card__link link" href="">
        <div class="card__thumb">
            <img class="card__photo" src="{{poster}}" alt="{{title}}" width="280" height="402">
        </div>
        <div class="card__info">
            <h2 class="card__title">{{title}}</h2>
            <p class="card__data">{{genres_short_list}} | {{release_year}}
                <span class="card__vote">
                    <span class="card__rating">{{vote_average}}</span>
                </span>
            </p>
        </div>
    </a>

</li>
{{/each}}

